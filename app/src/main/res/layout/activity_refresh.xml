<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context=".RefreshActivity">

    <ImageView
        android:id="@+id/imgRefresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_mood_24"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:id="@+id/txtRefresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONGRATULATION!!!"
        android:layout_gravity="center"
        android:fontFamily="@font/font2"/>

    <ProgressBar
        android:id="@+id/gaugeProgressBarRefresh"
        style="@style/CustomProgressBarWeek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="20dp"
        android:max="100"
        android:progress="0"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="WEEK"
        android:textSize="25dp"
        android:fontFamily="@font/font3"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/txtStepsWeek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text=""
        android:fontFamily="@font/font2"/>

    <TextView
        android:id="@+id/txtDistanceWeek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text=""
        android:fontFamily="@font/font2"/>

    <TextView
        android:id="@+id/txtCaloriesWeek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text=""
        android:fontFamily="@font/font2"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp">

        <Button
            android:id="@+id/resettingButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_gravity="center"
            android:text="SETTING"
            android:textStyle="bold"
            android:fontFamily="@font/font5"/>

        <Button
            android:id="@+id/refreshButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center"
            android:text="HOME"
            android:textStyle="bold"
            android:fontFamily="@font/font5"/>
    </LinearLayout>



</LinearLayout>
